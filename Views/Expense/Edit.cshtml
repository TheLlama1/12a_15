@model BorrowLend.Models.Expense

<h2>Редактирай разход</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ID" />
    <div class="form-group">
        <label asp-for="ExpenseName"></label>
        <input asp-for="ExpenseName" class="form-control" />
        <span asp-validation-for="ExpenseName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount"></label>
        <input asp-for="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Запази" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Назад към списъка с разходи</a>
