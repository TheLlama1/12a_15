@model BorrowLend.Models.Item

<h2>Update Item</h2>

<form asp-action="Update">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="ItemName" class="control-label"></label>
        <input asp-for="ItemName" class="form-control" />
        <span asp-validation-for="ItemName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Borrower" class="control-label"></label>
        <input asp-for="Borrower" class="form-control" />
        <span asp-validation-for="Borrower" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lender" class="control-label"></label>
        <input asp-for="Lender" class="form-control" />
        <span asp-validation-for="Lender" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
