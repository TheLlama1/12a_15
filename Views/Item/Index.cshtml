@model IEnumerable<BorrowLend.Models.Item>

@{
    ViewData["Title"] = "Items List";
}

<div class="container mt-4">
    <h2>Items List</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary mb-2">Create New Item</a>
    </p>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th scope="col">Item Name</th>
                <th scope="col">Borrower</th>
                <th scope="col">Lender</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Borrower</td>
                        <td>@item.Lender</td>
                        <td class="text-center">
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?');">Delete</button>
                            </form>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
