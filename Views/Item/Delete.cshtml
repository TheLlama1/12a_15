@model BorrowLend.Models.Item

<h2>Delete Item</h2>

<div>
    <h4>Are you sure you want to delete this item?</h4>
    <dl class="row">
        <dt class="col-sm-2">Item Name</dt>
        <dd class="col-sm-10">@Model.ItemName</dd>
        <dt class="col-sm-2">Borrower</dt>
        <dd class="col-sm-10">@Model.Borrower</dd>
        <dt class="col-sm-2">Lender</dt>
        <dd class="col-sm-10">@Model.Lender</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
