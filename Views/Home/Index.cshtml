@model IEnumerable<BorrowLend.Models.Item>

<h1>Borrowed Items List</h1>

<div class="col-6 text-right">
    <a class="btn btn-primary w-75" asp-controller="Item" asp-action="Create">Create new item</a>
</div>

@if (Model == null)
{
}
else if (!Model.Any())
{
        <p>Няма налични записи.</p>
}
else
{
        <table class="table">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Borrower</th>
                    <th>Lender</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Borrower</td>
                        <td>@item.Lender</td>
                        <td width="25%">
                            <a class="btn btn-success m-1" asp-controller="Item" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
}

<a asp-controller="Expense" asp-action="Index" class="btn btn-primary">Expenses</a>
